@{
  Layout = "_Layout";
}

@using BakeryWithAuth.Models;

<h1>Flavors</h1>

<h1> Flavors for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet.</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
      <li>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>